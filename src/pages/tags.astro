---
import MainGridLayout from "@layouts/MainGridLayout.astro";
import { getTagList, getSortedPosts } from "@utils/content-utils";
import { Icon } from "astro-icon/components";

const tags = await getTagList();
const posts = await getSortedPosts();

// 为每个标签计算文章
const tagsWithPosts = tags.map(tag => {
    const tagPosts = posts.filter(post => {
        return post.data.tags && post.data.tags.includes(tag.name);
    });
    return {
        ...tag,
        posts: tagPosts
    };
});

// 按文章数量排序
const sortedTags = tagsWithPosts.sort((a, b) => b.posts.length - a.posts.length);

// 计算最大和最小文章数，用于计算标签大小
const maxCount = Math.max(...sortedTags.map(t => t.posts.length), 1);
const minCount = Math.min(...sortedTags.map(t => t.posts.length), 1);

// 根据文章数量计算标签大小
function getTagSize(count: number) {
    if (maxCount === minCount) return 1;
    const normalized = (count - minCount) / (maxCount - minCount);
    return 0.85 + normalized * 0.3; // 大小范围 0.85 - 1.15
}

// 根据文章数量计算颜色深浅
function getTagOpacity(count: number) {
    if (maxCount === minCount) return 1;
    const normalized = (count - minCount) / (maxCount - minCount);
    return 0.6 + normalized * 0.4; // 透明度范围 0.6 - 1
}
---

<MainGridLayout title="文章标签" description="按标签浏览文章">
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
        <div class="card-base z-10 px-6 md:px-9 py-6 relative w-full">
            <h1 class="text-4xl font-bold mb-2 text-neutral-900 dark:text-white">文章标签</h1>
            <p class="text-neutral-500 dark:text-neutral-400 mb-8">共 {sortedTags.length} 个标签，{posts.length} 篇文章</p>
            
            <!-- 标签云 -->
            <div class="flex flex-wrap gap-3 mb-10">
                {sortedTags.map((tag, index) => {
                    const size = getTagSize(tag.posts.length);
                    const opacity = getTagOpacity(tag.posts.length);
                    return (
                        <a 
                            href={`/archive/?tag=${encodeURIComponent(tag.name)}`}
                            class="group relative inline-flex items-center gap-2 px-4 py-2 bg-[var(--card-bg)] rounded-full border border-[var(--line-divider)] transition-all duration-300 hover:shadow-md hover:border-[var(--primary)]/30 hover:-translate-y-0.5"
                            style={`
                                animation: fadeInUp 0.5s ease-out ${index * 0.05}s both;
                                font-size: ${size}rem;
                                opacity: ${opacity};
                            `}
                        >
                            <!-- 背景渐变 -->
                            <div class="absolute inset-0 bg-gradient-to-r from-[var(--primary)]/5 to-[var(--primary)]/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-full"></div>
                            
                            <span class="relative z-10 text-90 group-hover:text-[var(--primary)] transition-colors">
                                #{tag.name}
                            </span>
                            <span class="relative z-10 text-xs text-50 bg-[var(--btn-card-bg-hover)] px-1.5 py-0.5 rounded-full">
                                {tag.posts.length}
                            </span>
                        </a>
                    );
                })}
            </div>
            
            <!-- 标签详细列表 -->
            <div class="border-t border-[var(--line-divider)] pt-8">
                <h2 class="text-xl font-semibold text-90 mb-6">标签详情</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    {sortedTags.map((tag, index) => (
                        <div 
                            class="group bg-[var(--card-bg)] rounded-xl p-4 border border-[var(--line-divider)] transition-all duration-300 hover:shadow-md hover:border-[var(--primary)]/20"
                            style={`animation: fadeInUp 0.5s ease-out ${index * 0.08 + 0.3}s both;`}
                        >
                            <div class="flex items-start justify-between mb-3">
                                <a 
                                    href={`/archive/?tag=${encodeURIComponent(tag.name)}`}
                                    class="flex items-center gap-2 text-[var(--primary)] hover:underline"
                                >
                                    <Icon name="material-symbols:tag-rounded" class="w-4 h-4" />
                                    <span class="font-medium">{tag.name}</span>
                                </a>
                                <span class="text-xs text-50 bg-[var(--btn-card-bg-hover)] px-2 py-1 rounded-full">
                                    {tag.posts.length} 篇
                                </span>
                            </div>
                            
                            <!-- 文章列表 -->
                            <div class="space-y-2">
                                {tag.posts.slice(0, 3).map((post) => (
                                    <a 
                                        href={`/posts/${post.data.customSlug || post.slug}/`}
                                        class="block text-sm text-75 hover:text-[var(--primary)] transition-colors truncate"
                                    >
                                        {post.data.title}
                                    </a>
                                ))}
                                {tag.posts.length > 3 && (
                                    <a 
                                        href={`/archive/?tag=${encodeURIComponent(tag.name)}`}
                                        class="block text-xs text-30 hover:text-50 transition-colors"
                                    >
                                        还有 {tag.posts.length - 3} 篇文章...
                                    </a>
                                )}
                            </div>
                        </div>
                    ))}
                </div>
            </div>
            
            <!-- 空状态 -->
            {sortedTags.length === 0 && (
                <div class="text-center py-16">
                    <div class="w-16 h-16 rounded-full bg-[var(--btn-card-bg-hover)] flex items-center justify-center mx-auto mb-4">
                        <Icon name="material-symbols:label-off-outline-rounded" class="w-8 h-8 text-50" />
                    </div>
                    <p class="text-50 text-lg">暂无标签</p>
                </div>
            )}

            <!-- 底部间距 -->
            <div class="h-8"></div>
        </div>
    </div>
</MainGridLayout>

<style>
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
